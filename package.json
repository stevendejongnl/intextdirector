{
  "name": "intextdirector",
  "version": "1.0.0",
  "description": "This is a simple web application that checks whether a request originates from an internal or external network. It allows you to specify both internal and external URLs and redirects based on the network source.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "cleanup": "rm -rf dist coverage",
    "lint": "npx eslint './src'",
    "pretest": "npm run cleanup",
    "test": "npx mocha src/main.test.ts",
    "prebuild": "npm run cleanup",
    "build": "tsc -b",
    "prebundle": "npm run build",
    "bundle": "npx rollup --config rollup.config.js",
    "preserve": "npm run bundle",
    "serve": "npx http-server ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.9.1",
    "chai": "^5.1.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "globals": "^15.9.0",
    "jsdom": "^24.1.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.7.0",
    "rollup": "^4.18.0",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "tslib": "^2.6.3",
    "tsx": "^4.16.5",
    "typescript-eslint": "^8.0.1"
  }
}
